<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <title>Software Update</title>
    <hta:application
        applicationname="Update"
        border="thick"
        borderstyle="normal"
        caption="Software Update"
        icon="update.ico"
        contextmenu="yes"
        maximizebutton="yes"
        minimizebutton="yes"
        navigable="no"
        scroll="no"
        selection="no"
        showintaskbar="yes"
        singleinstance="yes"
        sysmenu="yes"
        version="1.0"
        windowstate="normal"
    />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    <style>
body {
  background-color: #fefefe;
  margin: 10px;
}
.head .text {
  margin-left: 20px;
  font-style: italic;
}
textarea {
  width: 90% !important;
  margin: 10px auto;
  font-size: 90%;
  word-wrap: normal;
}
a {
  text-decoration: underline !important;
}
    </style>
  </head>
  <body>
    <div class="content">
      <div class="head">
        <button id="startButton" class="btn btn-primary" role="button" title="Start update">
          Start
        </button>
        <span class="text text-muted">(Internet access is required!)</span>
      </div>
      <div class="body">
        <textarea id="outputArea" class="form-control" rows="12" title="Output text"></textarea>
      </div>
      <div class="foot">
        <div>
          <span>External links:</span>
          <a target="_blank" href="http://goo.gl/t31MqY" title="http://goo.gl/t31MqY">Google Drive</a>
          <a target="_blank" href="http://pan.baidu.com/s/1jGftD9W" title="http://pan.baidu.com/s/1jGftD9W">Baidu Disk</a>
        </div>
        <div>
          <span>Bug report:</span>
          <a target="_blank" href="http://sakuradite.com/subject/100" title="http://sakuradite.com/subject/100">Sakuradite</a>
          <a target="_blank" href="mailto:annotcloud@gmail.com" title="annotcloud@gmail.com">Email</a>
        </div>
      </div>
    </div>

    <script language="javascript">
window.onload = function() {
  window.resizeTo(350, 360);
};

function refresh(shell) { // shell -> refresh shell
  shell.Run("cmd /c", 0, true);
}

(function() {

  var area = document.getElementById('outputArea');
  area.focus(); // because the focused button is very ugly

  var btn = document.getElementById('startButton');

  var output = '';
  btn.onclick = function() {
    btn.disable = true;
    btn.className = 'btn btn-default'
    btn.value = "Updating";

    var shell = new ActiveXObject("WScript.Shell");
    //alert(objShell.CurrentDirectory);

    var path = "update.cmd";
    var cmd = shell.CurrentDirectory + "/" + path;
    //var cmd = ""cmd /c ping -n 7 www.google.com";

    var proc = shell.Exec(cmd);
    while (!proc.status) {
      var line = proc.StdOut.ReadLine();
      output += line + "\n";
      area.value = output;
      refresh(shell);
    }
    btn.disable = false;
    btn.className = 'btn btn-success';
    btn.value = "Done";
  };

})();

     </script>

  </body>
</html>

